<h1>Bookings</h1>
<div class="container">
  <div class="col-2">
    <ul>
      <li>
        <a href="#my-bookings">My Bookings </a>
      </li>
      <li>
        <% if @user.shelters.any? %>
          <a href="#shelter-bookings">My Shelter's Bookings </a>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="booking-card">
    <h2 id="my-bookings">My Bookings</h2>
    <% @bookings.each do |booking| %>
      <div class="card-product">
        <%= image_tag booking.shelter.banner, class: "card-img" %>
        <div class="card-product-infos">
          <h2><%= booking.shelter.name %></h2>
          <p><%= booking.date %></p>
          <p><%= booking.status %></p>
        </div>
      </div>
    <% end %>
  </div>
  <% if @user.shelters.any? %>
    <h2 id="shelter-bookings">My Shelter's Booking</h2>
    <div>
      <% @user.shelters.each do |shelter| %>
        <% shelter.bookings.each do |booking| %>
          <div class="card-product ">
            <p><%= booking.user.email %></p>
            <p><%= booking.date %></p>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-secondary">
                <input type="button" name="status" id="status1" autocomplete="off" value="Accept">
              </label>
              <label class="btn btn-secondary">
                <input type="button" name="status" id="status2" autocomplete="off" value="Decline">
              </label>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
